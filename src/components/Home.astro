---
import Particles from './Particles.astro';
---

<section id="home" class="relative h-screen w-full flex flex-col justify-center items-center bg-transparent text-text">
  <Particles />
  <div class="relative z-10 text-center px-4">
    <h1 class="text-6xl md:text-8xl font-bold mb-4 bg-gradient-to-r from-pink-500 to-pink-300 text-transparent bg-clip-text animate-fade-in-down">
      Arantxa's Portfolio
    </h1>
    <p class="text-xl md:text-2xl text-text/80 mb-8 animate-fade-in-up animation-delay-500">
      Creando experiencias de usuario interactivas que conectan el diseño y el código.
    </p>
    <button id="enter-portfolio" class="bg-pink-500 text-white font-bold py-3 px-8 rounded-full transition-all duration-300 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-opacity-50 transform hover:scale-105">
      Ver Portfolio
    </button>

    <!-- Social Icons -->
    <div class="mt-10 flex justify-center gap-x-6">
      <a href="https://www.linkedin.com/in/arantxa-redondo-893435308/" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-pink-500 transition-all duration-300 transform hover:scale-110">
        <span class="sr-only">LinkedIn</span>
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
      </a>
      <a href="https://github.com/arxntxx" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-pink-500 transition-all duration-300 transform hover:scale-110">
        <span class="sr-only">GitHub</span>
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.165 6.839 9.489.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.031-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.82c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.378.203 2.398.1 2.65.64.7 1.03 1.595 1.03 2.688 0 3.848-2.338 4.695-4.566 4.942.359.308.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.001 10.001 0 0022 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-down {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in-down {
    animation: fade-in-down 1s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out forwards;
  }

  .animation-delay-500 {
    animation-delay: 500ms;
  }

  /* Glow effect for the button on hover */
  button:hover {
    box-shadow: 0 0 20px 7px rgba(236, 72, 153, 0.4); /* Pink Glow */
  }
</style>
